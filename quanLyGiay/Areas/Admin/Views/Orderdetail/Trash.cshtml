@model IEnumerable<quanLyGiay.Models.Orderdetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Thùng rác đơn hàng</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Orderdetail")" class="btn btn-sm btn-success">
                    Quay về danh sách
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:100px;" class="text-center">Hàng đặt</th>
                    <th>Số lượng </th>
                    <th>Giá</th>
                    <th>Tổng giá</th>
                    <th style="width: 300px;" class="text-center">Chức năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="CheckId" type="checkbox" />
                        </td>

                        <td>@item.Product.Name</td>
                        <td>
                            @item.Amount
                        </td>
                        <td>@item.Price</td>
                        <td>@item.Tong</td>
                        <td class="text-center" style="display:flex; justify-content:space-evenly;">
                            <a href="@Url.Action("ReTrash", "Orderdetail", new { @id = item.Id})" class="btn btn-sm btn-info">
                                Thêm lại danh sách
                            </a>
                            <a href="@Url.Action("Delete", "Orderdetail", new { @id = item.Id})" class="btn btn-sm btn-warning">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

