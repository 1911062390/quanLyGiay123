@model quanLyGiay.Models.Orderdetail

@{ ViewBag.Title = "Details";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">

                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">Chi tiết đơn hàng</strong>
                </div>

                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Orderdetail")" class="btn btn-sm btn-success">
                        Quay về danh sách
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <dl class="dl-horizontal">
                <dt>
                    Tên giày
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>

                <dt>
                    Tên người đặt
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Order.Name)
                </dd>

                <dt>
                    Số lượng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Amount)
                </dd>

                <dt>
                    Giá tiền
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    Tổng tiền
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tong)
                </dd>

                <dt>
                    Tình trạng
                </dt>

                <dd>
                    @ViewBag.TinhTrang
                </dd>

            </dl>
        </div>

    </div>


}
